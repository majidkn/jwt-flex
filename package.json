{
  "name": "jwt-flex",
  "version": "0.1.1",
  "description": "Lightweight JWT authentication library for Node.js, Express, Fastify, NestJS, and pure Node",
  "main": "dist/core.js",
  "types": "dist/core.d.ts",
  "exports": {
    ".": {
      "import": "./dist/core.js",
      "require": "./dist/core.cjs"
    },
    "./express": {
      "import": "./dist/express.js",
      "require": "./dist/express.cjs"
    },
    "./fastify": {
      "import": "./dist/fastify.js",
      "require": "./dist/fastify.cjs"
    },
    "./nest": {
      "import": "./dist/nest.js",
      "require": "./dist/nest.cjs"
    },
    "./node": {
      "import": "./dist/node.js",
      "require": "./dist/node.cjs"
    }
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build:js": "bun build ./src/core.ts ./src/express.ts ./src/fastify.ts ./src/nest.ts ./src/node.ts --outdir dist --target node --minify --splitting",
    "build:types": "tsc -p tsconfig.declarations.json",
    "build": "bun run clean && bun run build:js && bun run build:types",
    "test": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "jwt",
    "auth",
    "authentication",
    "jsonwebtoken",
    "express",
    "fastify",
    "nestjs",
    "nodejs"
  ],
  "author": "Majix",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/majidkn/jwt-flex.git"
  },
  "bugs": {
    "url": "https://github.com/majidkn/jwt-flex/issues"
  },
  "homepage": "https://github.com/majidkn/jwt-flex#readme",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.19.13",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "bun-types": "^1.2.21",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.6.2",
    "prettier-plugin-organize-imports": "^4.2.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "fastify": "^4.0.0",
    "express": "^4.17.0"
  },
  "dependencies": {
    "fastify-plugin": "^4.5.1",
    "jsonwebtoken": "^9.0.2"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "express": "^4.17.0",
    "fastify": "^4.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/common": {
      "optional": true
    },
    "@nestjs/core": {
      "optional": true
    },
    "express": {
      "optional": true
    },
    "fastify": {
      "optional": true
    }
  }
}
